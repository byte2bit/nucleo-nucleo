<?php

/**
 * Implements hook_preprocess_menu().
 *
 * @param array[] $variables
 */
function silvio_module_preprocess_menu(&$variables)
{
    if (in_array('administer silvio_module', Drupal::currentUser()->getRoles())) {
        // Hide the menu item
        unset($variables['items']['silvio_module.admin']);
    }
}
